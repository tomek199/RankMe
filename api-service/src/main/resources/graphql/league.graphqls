input CreateLeagueCommand {
    name: String!
}

input RenameLeagueCommand {
    id: String!
    name: String!
}

input ChangeLeagueSettingsCommand {
    id: String!
    allowDraws: Boolean!
    maxScore: Int!
}

input GetLeagueQuery {
    id: String!
}

type League {
    id: String!
    name: String!
    allowDraws: Boolean!
    maxScore: Int!
    players: [Player!]!
    games(first: Int!, after: String): GameConnection @connection(for: "Game")
}