scalar LocalDate
scalar LocalDateTime

type MutationType {
    addLeague(input: AddLeagueInput!): League
    addCompetitor(input: AddCompetitorInput!): Competitor
    addGame(leagueId: String!,
        playerOneId: String!, playerOneScore: Int!
        playerTwoId: String!, playerTwoScore: Int!): Game
    addEvent(leagueId: String!, memberOneId: String!, memberTwoId: String!, dateTime: LocalDateTime!): Event
    completeGame(eventId: String!, playerOneScore: Int!, playerTwoScore: Int!): Game
}

type QueryType {
    league(id: String!): League
    competitor(id: String!): Competitor
    competitorsByLeagueId(leagueId: String!): [Competitor]
    game(id: String!): Game
}

schema {
    query: QueryType
    mutation: MutationType
}
